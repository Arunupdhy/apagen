<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate='0'>

    <record model="ir.module.category" id="module_category_rack">
			<field name="name">RACK</field>
			<field name="sequence">16</field>
		</record>
        
        <record id="group_sales_user" model="res.groups">
			<field name="name">Sales Executive</field>
			<field name="category_id" ref="module_category_rack" />
		</record>

        <record id="group_sales_manager" model="res.groups">
			<field name="name">Sales Manager</field>
			<field name="category_id" ref="module_category_rack" />
            <field name="implied_ids" eval="[(4, ref('group_sales_user'))]"/>
		</record>

		<record id="group_rack_user" model="res.groups">
			<field name="name">RACK/User</field>
			<field name="category_id" ref="module_category_rack" />
            <field name="implied_ids" eval="[(4, ref('group_sales_manager'))]"/>
		</record>

		<record id="group_rack_manager" model="res.groups">
			<field name="name">RACK/Manager</field>
			<field name="category_id" ref="module_category_rack" />
			<field name="implied_ids" eval="[(4, ref('group_rack_user'))]" />
		</record>

        <!--  ********** Rules ************* -->
       
        <record id="brief_sales_user_rule" model="ir.rule">
            <field name="name">Sales Executive Brief's</field>
            <field name="model_id" ref="model_brief"/>
            <field name="domain_force">[('user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_sales_user'))]"/>
        </record>

        <record id="brief_sales_manager_rule" model="ir.rule">
            <field name="name">Sales Manager Brief's</field>
            <field name="model_id" ref="model_brief"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_sales_manager'))]"/>
        </record>

    </data>
</openerp>
